{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "osx": {
                "command": "zsh ${workspaceFolder}/scripts/osx/compile.zsh"
            }
        },
        {            
            "label": "Run Unit Tests",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "osx": {
                "command": "zsh ${workspaceFolder}/scripts/osx/run-tests.zsh"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean", 
            "type": "shell", 
            "group": {
                "kind": "build", 
            },
            "osx": {
                "command": "zsh ${workspaceFolder}/scripts/osx/run-tests.zsh"
            }
        }
    ]
}